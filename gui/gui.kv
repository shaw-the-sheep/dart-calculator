MyWindow:
    orientation: "vertical"
    spacing: 15
    size_hint: (1, 1)
    ScreenM:
        id:screen_manager
        current: "home"
        HomeInterface:
        OptionsInterface:
        CreateGameInterface:
        LoadGameInterface:
        GameInterface:

<LoadGameInterface>:
    name: "load"
    MDBoxLayout:
        orientation: "vertical"
        AppBar:
            title: "Load previous game"
        Space:
        MDLabel:
            text: "load game"
        HomeNavigation:
            text: "Back Home"
            on_press:
                root.manager.current = "home"

<HomeNavigation>:
    # size changing
    background_color: (0, 0, 0, 0)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (173/255, 216/255, 230/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [35]
    pos_hint:{"center_x": 0.5, "center_y": .5}
    font_size: 25
    size_hint_x: None
    width: "200dp"
    size_hint_y: None
    height: "80dp"
    radius: [30, 30, 30, 30]
    text_size: self.width - dp(20), None
    valign: "middle"
    halign: "center"


<Title@MDLabel>:
    size_hint: (1, None)
    height: "40dp"
    halign: "center"

<AppBar>:
    id: appbar
    orintation: "horizontal"
    md_bg_color: "lightblue"
    size_hint:(1, None)
    height: "50dp"
    MDIconButton:
        id: return_btn
        icon: "arrow-left"
        size_hint: (None, None)
        size: ("40dp", "40dp")
        on_press:
            app.root.ids.screen_manager.current = "home"
            root.go_back()

    MDLabel:
        text: root.title
        font_size: 20
        md_bg_color: "lightblue"
        halign: "center"

<Space@MDLabel>
    size_hint: (1, 1)